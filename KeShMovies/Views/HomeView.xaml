<UserControl x:Class="KeShMovies.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:KeShMovies.Views" 
      xmlns:customcontrol="clr-namespace:KeShMovies.CustomControl"
      xmlns:userControl="clr-namespace:KeShMovies.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">
    <Border
        CornerRadius="10"                    
            BorderThickness="2"
            Opacity="0.95">

        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                <GradientStop Color="#8E0E00" Offset="0"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>

            
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <WrapPanel Orientation="Horizontal" Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding Movies}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <userControl:UC_Movie 
                                Title="{Binding Title}" 
                                imdbRating="{Binding imdbRating}"
                                Year="{Binding Year}"
                                Poster="{Binding Poster}">
                                </userControl:UC_Movie>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>

                <DockPanel>
                    <Menu Foreground="WhiteSmoke" DockPanel.Dock="Right" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <MenuItem
                            Background="#181818" Header="_Profile">
                            <MenuItem Header="Profile" Icon="{materialDesign:PackIcon Kind=EmojiManProfile}"></MenuItem>
                            <MenuItem  Header="Favorites" Icon="{materialDesign:PackIcon Kind=Heart}" />
                            <MenuItem Header="Watch List" Icon="{materialDesign:PackIcon Kind=WatchLater}" />
                            <Separator />
                            <MenuItem Header="Log Out" Icon="{materialDesign:PackIcon Kind=ExitToApp}"/>
                        </MenuItem>

                    </Menu>

                    <materialDesign:ColorZone
                         VerticalAlignment="Center"
                         Mode="Standard"
                         Padding="8 4 8 4"
                         CornerRadius="2"
                         Panel.ZIndex="1"
                         Height="35"
                         Margin="16 5 16 5"
                         materialDesign:ElevationAssist.Elevation="Dp6">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged}"
                                Margin="8 0 0 0"
                                materialDesign:HintAssist.Hint="Search"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                MinWidth="200"
                                VerticalAlignment="Center" />

                            <Button Grid.Column="1" Style="{StaticResource MaterialDesignToolButton}" Command="{Binding SearchCommand}">
                                <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                            </Button>

                        </Grid>
                    </materialDesign:ColorZone >
                </DockPanel>
            </Grid>

        </Grid>
    </Border>
</UserControl>
